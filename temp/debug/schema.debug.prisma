generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name               String               @db.VarChar(255)
  email              String               @unique
  role               String               @default("user") @db.VarChar(50)
  image              String?              @map("avatar")
  createdAt          DateTime?            @default(now()) @map("created_at") @db.Timestamptz(6)
  emailVerified      DateTime?
  updatedAt          DateTime?            @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  password           String?
  accounts           Account[]
  articles           News[]               @relation("Author")
  bookmarks          Bookmark[]
  comments           Comment[]
  push_subscriptions push_subscriptions[]
  reactions          Reaction[]
  reading_history    ReadingHistory[]
  sessions           Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model News {
  id                String                 @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title             String
  slug              String                 @unique
  content           String?
  status            String                 @default("draft") @db.VarChar(50)
  image             String?                @map("image")
  authorId          String?                @map("author_id") @db.Uuid
  publishedAt       DateTime?              @default(now()) @map("published_at") @db.Timestamptz(6)
  canonical_url     String?
  category          String?                @db.VarChar(100)
  createdAt         DateTime?              @default(now()) @map("created_at") @db.Timestamptz(6)
  event_id          String?                @db.Uuid
  featured_at       DateTime?              @db.Timestamp(6)
  featured_priority Int?                   @default(0)
  home_position     Int?
  is_featured       Boolean?               @default(false)
  is_pinned_home    Boolean?               @default(false)
  is_prime          Boolean?               @default(false)
  keywords          String[]
  location          String?                @db.VarChar(100)
  news_type         String?                @default("regular") @db.VarChar(50)
  parent_category   String?                @db.VarChar(100)
  prime_at          DateTime?              @db.Timestamp(6)
  prime_priority    Int?                   @default(0)
  public_id         Int                    @default(autoincrement()) @map("public_id")
  scheduled_at      DateTime?              @db.Timestamptz(6)
  seo_description   String?
  seo_title         String?                @db.VarChar(255)
  source            String?                @db.VarChar(255)
  source_url        String?
  sub_headline      String?
  updatedAt         DateTime?              @default(now()) @map("updated_at") @db.Timestamptz(6)
  video_thumbnail   String?
  video_url         String?
  views             Int?                   @default(0)
  contributors      article_contributors[]
  images            article_images[]
  tags              article_tags[]
  author            User?                  @relation("Author", fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  event             events?                @relation(fields: [event_id], references: [id], onUpdate: NoAction)
  bookmarks         Bookmark[]
  comments          Comment[]
  reactions         Reaction[]
  history           ReadingHistory[]
  visitor_logs      visitor_logs[]

  @@map("articles")
}

model article_contributors {
  id             String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  article_id     String?   @db.Uuid
  contributor_id String?   @db.Uuid
  role           String?   @default("reporter") @db.VarChar(50)
  custom_name    String?   @db.VarChar(255)
  display_order  Int?      @default(0)
  created_at     DateTime? @default(now()) @db.Timestamp(6)
  news           News?     @relation(fields: [article_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model article_images {
  id            String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  article_id    String?   @db.Uuid
  image_url     String
  image_type    String    @db.VarChar(50)
  caption       String?
  photographer  String?   @db.VarChar(255)
  display_order Int?      @default(0)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  news          News?     @relation(fields: [article_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model article_tags {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  article_id String?   @db.Uuid
  tag        String    @db.VarChar(100)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  news       News?     @relation(fields: [article_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model events {
  id           String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title        String    @db.VarChar(255)
  slug         String    @unique @db.VarChar(255)
  description  String?
  banner_image String?   @db.VarChar(255)
  is_active    Boolean?  @default(false)
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  articles     News[]
}

model site_settings {
  id                      Int       @id @default(autoincrement())
  facebook_live_url       String?
  facebook_is_live        Boolean?  @default(false)
  youtube_playlist_id     String?
  youtube_api_key         String?
  breaking_news_ticker    String?
  updated_at              DateTime? @default(now()) @db.Timestamptz(6)
  breaking_news_is_active Boolean?  @default(true)
  site_name               String?   @default("সমকাল")
}

model visitor_logs {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  article_id String?   @db.Uuid
  visited_at DateTime? @default(now()) @db.Timestamptz(6)
  ip_hash    String?   @db.VarChar(255)
  user_agent String?
  path       String?
  news       News?     @relation(fields: [article_id], references: [id], onUpdate: NoAction)
}

model push_subscriptions {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id    String?   @db.Uuid
  endpoint   String    @unique
  p256dh     String
  auth       String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  user       User?     @relation(fields: [user_id], references: [id], onUpdate: NoAction)
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String   @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  newsId    String   @map("news_id") @db.Uuid
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, newsId])
  @@map("bookmarks")
}

model ReadingHistory {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId    String    @map("user_id") @db.Uuid
  newsId    String    @map("article_id") @db.Uuid
  viewed_at DateTime? @default(now()) @db.Timestamptz(6)
  news      News      @relation(fields: [newsId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, newsId])
  @@map("reading_history")
}

model Comment {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  newsId     String    @map("article_id") @db.Uuid
  userId     String    @map("user_id") @db.Uuid
  content    String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  status     String?   @default("approved") @db.VarChar(20)
  news       News      @relation(fields: [newsId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Reaction {
  id     String @id @default(cuid())
  type   String
  userId String @db.Uuid
  newsId String @db.Uuid
  news   News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, newsId])
  @@map("reactions")
}


